#include <16F877A.h>
#fuses NOWDT, HS, NOPUT, NOPROTECT, NODEBUG, NOBROWNOUT, NOLVP
#use delay(clock=8M)
#include <lcd.c>
#define SW1 PIN_C3
#define SW2 PIN_C4
void main(void)
{ 
int8 SW=0;                               
int8 phut=0;
int8 gio=0;
int8 giay=0;
int8 dem=0;
lcd_init();
lcd_gotoxy(4,1);
printf(lcd_putc,"DONG HO");
while (TRUE)
{ 
   lcd_gotoxy(4,2);
   printf(lcd_putc,"%02u:%02u:%02u",gio,phut,giay);
   giay++;
if(!input(SW1)) {SW=1;gio++;}
if(!input(SW2))
{
   SW=2;
   phut++;
}
switch(SW)
{
case 1:
{  
   {
   delay_ms(1000);giay++;
   if(giay==60){giay=0;phut++;}
   if(phut==60){phut=0;gio++;}
   lcd_gotoxy(4,2);
   printf(lcd_putc,"%02u:%02u:%02u",gio,phut,giay);
   break;
   }
}

case 2:
   {
   delay_ms(1000);giay++;
   if(giay==6){giay=0;phut++;}
   if(phut==60){phut=0;gio++;}
   lcd_gotoxy(4,2);
   printf(lcd_putc,"%02u:%02u:%02u",gio,phut,giay);
   break;
   }
}
}
}

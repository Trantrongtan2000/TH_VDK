#include <16F877A.h>
#fuses NOWDT, HS, NOPUT, NOPROTECT, NODEBUG, NOBROWNOUT, NOLVP
#use delay(clock=8M)
#INT_TIMER0
int8 i,dv,chuc,tram,dem;
const int8 led[10]={0x60,0xda,0xf2,0x66,0xb6,0xbe,0xe0,0xfe,0xf6};
void qled()
{
   dv=dem%10;
   chuc=dem/10;
   tram=dem/100;
   output_low(pin_D1);
   output_low(pin_D2);
   output_high(pin_D2);
   output_b(led[tram]);
   delay_ms(10);
   output_high(pin_D2);
   
   output_low(pin_D2);
   output_low(pin_D0);
   output_high(pin_D1);
   output_b(led[chuc]);
   delay_ms(10);
   output_high(pin_D1);
   
   output_low(pin_D1);
   output_low(pin_D2);
   output_high(pin_D0);
   output_b(led[dv]);
   delay_ms(10);
   output_high(pin_D0);
}
void main(void)
{ 
enable_interrupts(GLOBAL);
enable_interrupts(INT_TIMER0);
setup_timer_0(RTCC_DIV_64|RTCC_INTERNAL);
while(1);
}

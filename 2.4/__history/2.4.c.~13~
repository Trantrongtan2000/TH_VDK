#include <16F877A.h>
#fuses NOWDT, HS, NOPUT, NOPROTECT, NODEBUG, NOBROWNOUT, NOLVP
#use delay(clock=8M)
#INT_TIMER0
int8 dv,chuc,tram,dem;
const int8 led[10]={0x03,0x9f,0x25,0x0d,0x99,0x49,0x41,0x1f,0x09};
void qled()
{
   dv=dem%10;
   chuc=dem/10;
   tram=dem/100;
   output_low(pin_D1);
   output_low(pin_D2);
   output_high(pin_D2);
   output_b(led[tram]);
   delay_ms(20);
   output_high(pin_D2);
   
   output_low(pin_D2);
   output_low(pin_D0);
   output_high(pin_D1);
   output_b(led[chuc]);
   delay_ms(20);
   output_high(pin_D1);
   
   output_low(pin_D1);
   output_low(pin_D2);
   output_high(pin_D0);
   output_b(led[dv]);
   delay_ms(20);
   output_high(pin_D0);
}
void main(void)
{ 
enable_interrupts(GLOBAL);
enable_interrupts(INT_TIMER0);
setup_timer_0(RTCC_DIV_64|RTCC_INTERNAL);
while(1)
{
for(int16 i=0;i<66;i++)
{qled();}
dem=dem+1;
}
}

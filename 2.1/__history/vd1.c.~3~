#include <16F877A.h>
#fuses NOWDT, HS, NOPUT, NOPROTECT, NODEBUG, NOBROWNOUT, NOLVP
#use delay(clock=8M)
void delay400ms()
{
   Setup_timer_1(T1_INTERNAL|T1_DIV_BY_2);
   for(int8 i=0;i<10;i++)
   {
   Setup_timer_1(25536);
   while(get_timer_1()>25536);
   }
}
void main(void)
{ 
While(1)
   {
   output_c(0x01);
   delay400ms();
   output_c(0x00);
   delay400ms();
   }
}

#include <16F877A.h>
#fuses NOWDT, HS, NOPUT, NOPROTECT, NODEBUG, NOBROWNOUT, NOLVP
#use delay(clock=8M)
#include <lcd.c>
#define SW1 PIN_C3
#define SW2 PIN_C4
void main(void)
{ 
int8 SW=0;
delay_ms(100);
while (TRUE)
{lcd_init();
lcd_gotoxy(1,1);
printf(lcd_putc,"DONG HO DEM GIAY");
lcd_gotoxy(4,2);
printf(lcd_putc,"00:00");
if(!input(SW1)) SW=1;
while(!input(SW2))
{SW=2;
int8 dem=0;
delay_ms(100);
dem++;
if(dem>50)
{
int16 phantram=0;int8 giay=0;
lcd_gotoxy(4,2);
printf(lcd_putc,"%02u:%02lu",giay,phantram);
}
}
switch(SW)
{case 1: {
int8 giay=0;
lcd_gotoxy(1,1);
printf(lcd_putc,"DONG HO DEM GIAY");
while(1)
{
int16 phantram=0;
while(1)
{
lcd_gotoxy(4,2);
printf(lcd_putc,"%02u:%02lu",giay,phantram);
delay_ms(10);
phantram++;
if(phantram==100)break;
}
giay++;
if(!input(SW2))break;
}
}

case 2:
{delay_ms(100);
break;
}
}
}
}

